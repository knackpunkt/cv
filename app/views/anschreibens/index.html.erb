<p id="notice"><%= notice %></p>

<h1>Anschreibens</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adess</th>
      <th>Plz</th>
      <th>City</th>
      <th>Company name</th>
      <th>Comapay adress</th>
      <th>Company city</th>
      <th>Bewerbung</th>
      <th>Stelle</th>
      <th>Datum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anschreibens.each do |anschreiben| %>
      <tr>
        <td><%= anschreiben.name %></td>
        <td><%= anschreiben.adess %></td>
        <td><%= anschreiben.plz %></td>
        <td><%= anschreiben.city %></td>
        <td><%= anschreiben.company_name %></td>
        <td><%= anschreiben.comapay_adress %></td>
        <td><%= anschreiben.company_city %></td>
        <td><%= anschreiben.bewerbung %></td>
        <td><%= anschreiben.stelle %></td>
        <td><%= anschreiben.datum %></td>
        <td><%= link_to 'Show', anschreiben %></td>
        <td><%= link_to 'Edit', edit_anschreiben_path(anschreiben) %></td>
        <td><%= link_to 'Destroy', anschreiben, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

